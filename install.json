{
  "resources": {
    "body": [
      {
        "type": "style",
        "src": "./source/app.css"
      },
      {
        "type": "script",
        "src": "./source/app.js"
      }
    ]
  },
  "preview": {
    "handlers": [
      {
        "options": ["*"],
        "execute": "INSTALL_SCOPE.setOptions(INSTALL_OPTIONS)"
      }
    ]
  },
  "options": {
    "properties": {
      "location": {
        "title": "Script location (typically ok to use default)",
        "order": 0,
        "type": "object",
        "format": "element",
        "default": {
          "selector": "body",
          "method": "append"
        }
      },
      "sitecode": {
        "title": "Skimlinks Site Code (ex. 43256X1128205)",
        "type": "string"
      }
    }
  }
}
